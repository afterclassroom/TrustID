<div class="d-flex align-items-center justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="mb-4 text-center">Login with Axiam</h2>
        <%= form_with url: push_notification_facial_sign_on_index_path, method: :post, local: true, data: { turbo: false } do |f| %>
          <div class="mb-4 row align-items-center">
            <div class="col-md-4">
              <%= f.label :email, 'Email for Axiam:', class: "form-label mb-0" %>
            </div>
            <div class="col-md-8">
              <%= f.email_field :email, required: true, class: "form-control" %>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <%= f.submit 'Submit', class: 'btn btn-primary px-4' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
