<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="mb-4">Dashboard</h2>
        <p class="mb-2"><strong>Email:</strong> <%= current_user.email %></p>
        <% if current_user.avatar.attached? %>
          <div class="mb-3">
            <img src="<%= url_for(current_user.avatar) %>" class="rounded-circle" width="100" height="100" alt="Avatar">
          </div>
        <% end %>
        <a href="/users/edit" class="btn btn-outline-primary">Edit Profile</a>
      </div>
    </div>
  </div>
</div>
