<style>
    :root {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      color-scheme: light;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      background: #0f172a;
      color: #0f172a;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .page {
      max-width: 1120px;
      margin: 0 auto;
      padding: 24px 16px 40px;
      flex: 1;
    }

    header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 24px;
      color: #000;
    }

    .brand {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .brand-logo {
      width: 32px;
      height: 32px;
      border-radius: 12px;
      background: radial-gradient(circle at 30% 20%, #38bdf8, #0ea5e9 40%, #1d4ed8 80%);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
      color: white;
      font-weight: 600;
    }

    .brand-name {
      font-weight: 600;
      letter-spacing: 0.03em;
      font-size: 0.95rem;
      text-transform: uppercase;
    }

    .header-right {
      font-size: 0.9rem;
      color: #000;
    }

    .header-right a {
      color: #a1a1a1;
      text-decoration: none;
      font-weight: 500;
    }

    main {
      background: #f9fafb;
      border-radius: 24px;
      padding: 28px 24px;
      display: grid;
      grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
      gap: 32px;
      box-shadow: 0 24px 60px rgba(15, 23, 42, 0.5),
                  0 0 0 1px rgba(15, 23, 42, 0.1);
    }

    @media (max-width: 840px) {
      main {
        grid-template-columns: minmax(0, 1fr);
        padding: 20px 18px;
      }
    }

    .left {
      padding-right: 8px;
    }

    .kicker {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 4px 10px;
      border-radius: 999px;
      background: #e0f2fe;
      color: #0369a1;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      margin-bottom: 10px;
    }

    .kicker-dot {
      width: 6px;
      height: 6px;
      border-radius: 999px;
      background: #22c55e;
    }

    h1 {
      font-size: 2rem;
      line-height: 1.2;
      margin-bottom: 8px;
      color: #0f172a;
    }

    .subtitle {
      font-size: 0.95rem;
      color: #4b5563;
      margin-bottom: 20px;
      max-width: 30rem;
    }

    .benefits {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 16px;
      margin-bottom: 26px;
    }

    .benefit {
      background: #ffffff;
      border-radius: 16px;
      padding: 12px 14px;
      font-size: 0.9rem;
      box-shadow: 0 10px 25px rgba(148, 163, 184, 0.25);
      display: flex;
      gap: 10px;
      align-items: flex-start;
    }

    .benefit-icon {
      width: 22px;
      height: 22px;
      border-radius: 999px;
      background: #ecfdf3;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
    }

    .steps-title {
      font-weight: 600;
      font-size: 0.9rem;
      margin-bottom: 8px;
      color: #111827;
    }

    .steps {
      list-style: none;
      counter-reset: face-steps;
      display: grid;
      gap: 8px;
      font-size: 0.88rem;
      color: #4b5563;
    }

    .steps li {
      display: flex;
      gap: 10px;
      align-items: flex-start;
    }

    .steps li::before {
      counter-increment: face-steps;
      content: counter(face-steps);
      width: 20px;
      height: 20px;
      border-radius: 999px;
      background: #e5e7eb;
      font-size: 0.75rem;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-top: 2px;
      flex-shrink: 0;
    }

    .right {
      background: #ffffff;
      border-radius: 20px;
      padding: 18px 18px 20px;
      box-shadow: 0 16px 45px rgba(148, 163, 184, 0.4);
      display: flex;
      flex-direction: column;
      gap: 14px;
    }

    .right-title {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 4px;
      color: #111827;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .field {
      display: flex;
      flex-direction: column;
      gap: 4px;
      font-size: 0.85rem;
    }

    .field label {
      font-weight: 500;
      color: #374151;
    }

    input[type="email"],
    input[type="text"] {
      width: 100%;
      border-radius: 10px;
      border: 1px solid #d1d5db;
      padding: 9px 11px;
      font-size: 0.9rem;
      outline: none;
      background: #f9fafb;
      transition: 0.15s ease;
    }

    input:focus {
      border-color: #0f766e;
      box-shadow: 0 0 0 1px rgba(15, 118, 110, 0.2);
      background: #ffffff;
    }

    .checkbox-row {
      display: flex;
      align-items: flex-start;
      gap: 8px;
      font-size: 0.8rem;
      color: #4b5563;
    }

    .checkbox-row input[type="checkbox"] {
      margin-top: 4px;
    }

    .checkbox-row a {
      color: #0f766e;
      text-decoration: none;
    }

    .checkbox-row a:hover {
      text-decoration: underline;
    }

    input[type="submit"] {
      border: none;
      border-radius: 999px;
      padding: 10px 16px;
      font-size: 0.95rem;
      font-weight: 500;
      background: linear-gradient(135deg, #0f766e, #22c55e);
      color: #ffffff;
      cursor: pointer;
      display: inline-flex;
      justify-content: center;
      gap: 6px;
      box-shadow: 0 14px 30px rgba(34, 197, 94, 0.35);
      transition: 0.12s ease;
    }

    input[type="submit"]:hover {
      transform: translateY(-1px);
      box-shadow: 0 16px 35px rgba(34, 197, 94, 0.4);
    }

    input[type="submit"]:active {
      transform: translateY(0);
    }

    .privacy-box {
      margin-top: 4px;
      border-radius: 12px;
      background: #f0fdf4;
      padding: 10px 12px;
      font-size: 0.78rem;
      color: #166534;
      display: flex;
      gap: 8px;
    }

    .alert {
      padding: 12px 16px;
      border-radius: 10px;
      margin-bottom: 16px;
      font-size: 0.85rem;
    }

    .alert-danger {
      background: #fee2e2;
      color: #991b1b;
      border: 1px solid #fecaca;
    }
</style>
<div class="page">
    <header>
      <div class="brand">
        <div class="brand-logo">F</div>
        <div class="brand-name">Sign in with Face</div>
      </div>
      <div class="header-right">
        Already have an account?
        <%= link_to 'Sign in', new_user_session_path %>
      </div>
    </header>

    <main>
      <section class="left">
        <div class="kicker">
          <span class="kicker-dot"></span>
          Passwordless Login
        </div>

        <h1>Create your face-only login.</h1>
        <p class="subtitle">
          No passwords. No codes. Just your face ‚Äî fast, safe, and secure.
        </p>

        <div class="benefits">
          <div class="benefit">
            <div class="benefit-icon">‚ö°</div>
            <div><strong>Fast</strong><p style="margin-top: 4px; font-size: 0.85rem; color: #6b7280;">Sign in instantly using facial recognition.</p></div>
          </div>
          <div class="benefit">
            <div class="benefit-icon">üõ°Ô∏è</div>
            <div><strong>Secure</strong><p style="margin-top: 4px; font-size: 0.85rem; color: #6b7280;">Your face verifies your identity.</p></div>
          </div>
          <div class="benefit">
            <div class="benefit-icon">üîí</div>
            <div><strong>Private</strong><p style="margin-top: 4px; font-size: 0.85rem; color: #6b7280;">Your facial data stays protected.</p></div>
          </div>
        </div>

        <div>
          <div class="steps-title">How setup works</div>
          <ol class="steps">
            <li>Enter your name and email.</li>
            <li>Verify your email address.</li>
            <li>Scan QR code with Axiam app.</li>
            <li>Complete a quick facial scan.</li>
            <li>You're ready‚Äîsign in with your face next time.</li>
          </ol>
        </div>
      </section>

      <section class="right">
        <div>
          <div class="right-title">Create your face login</div>
        </div>

        <% if flash[:alert] %>
          <div class="alert alert-danger">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= form_with url: facial_signup_create_path, method: :post, local: true do |f| %>
          <div class="field">
            <%= f.label :full_name, 'Full name' %>
            <%= f.text_field :full_name, placeholder: 'Jane Doe', required: true %>
          </div>

          <div class="field">
            <%= f.label :email, 'Email address' %>
            <%= f.email_field :email, placeholder: 'you@example.com', required: true %>
          </div>

          <div class="checkbox-row">
            <%= f.check_box :tos, required: true %>
            <%= f.label :tos do %>
              I agree to the <%= link_to 'Terms of Service', '#' %> and <%= link_to 'Privacy Policy', '#' %>.
            <% end %>
          </div>

          <%= f.submit 'Continue to facial scan ‚Üí' %>

          <div class="privacy-box">
            <span>üîê</span>
            <div>
              <strong>Your face, your control.</strong>
              We only use your facial scan to verify your identity. It is encrypted and never sold or shared.
            </div>
          </div>
        <% end %>
      </section>
    </main>
  </div>