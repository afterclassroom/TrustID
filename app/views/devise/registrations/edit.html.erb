<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <%= render 'layouts/flash' %>
        <h2 class="mb-4">Edit Profile</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :avatar, class: "form-label" %>
            <%= f.file_field :avatar, class: "form-control" %>
            <% if resource.avatar.attached? %>
              <div class="mt-2">
                <img src="<%= url_for(resource.avatar) %>" class="rounded-circle" width="80" height="80" alt="Avatar">
              </div>
            <% end %>
          </div>
          <div class="d-grid gap-2">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
        <% end %>
        <div class="d-flex justify-content-center gap-2 mt-4">
          <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
          <%= link_to 'Enable Facial Sign In', enable_facial_sign_on_path, class: 'btn btn-info' %>
        </div>
      </div>
    </div>
  </div>
</div>
