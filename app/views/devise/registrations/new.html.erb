<div class="d-flex align-items-center justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="mb-4 text-center">Sign Up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
          <div class="mb-3 row align-items-center">
            <div class="col-md-4">
              <%= f.label :full_name, "Full Name", class: "form-label mb-0" %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :full_name, class: "form-control" %>
            </div>
          </div>
          <div class="mb-3 row align-items-center">
            <div class="col-md-4">
              <%= f.label :email, class: "form-label mb-0" %>
            </div>
            <div class="col-md-8">
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="mb-3 row align-items-center">
            <div class="col-md-4">
              <%= f.label :password, class: "form-label mb-0" %>
            </div>
            <div class="col-md-8">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>
          <div class="mb-4 row align-items-center">
            <div class="col-md-4">
              <%= f.label :password_confirmation, class: "form-label mb-0" %>
            </div>
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>
          <div class="d-flex justify-content-center gap-2">
            <%= f.submit "Sign up", class: "btn btn-primary px-4" %>
            <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-secondary px-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
